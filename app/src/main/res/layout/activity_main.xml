<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adrie.organizer.MainActivity"
    android:background="@android:color/holo_orange_dark">

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtField_email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:id="@+id/txtView_email"/>

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtField_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:id="@+id/txtView_name"/>

    <TextView
        android:text="Resgister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/txtView_register"
        android:onClick="createProfile"/>

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:id="@+id/bt_register"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtView_studentNumber"
       />

    <TextView
        android:id="@+id/txtView_studentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Number"
        android:layout_above="@+id/txtField_studentNumber"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginBottom="57dp"
        android:id="@+id/txtField_name"
        android:hint="Name"
        android:layout_above="@+id/txtView_studentNumber"
        android:layout_alignStart="@+id/txtField_studentNumber"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"

        android:id="@+id/txtField_studentNumber"
        android:hint="Student Number"
        android:layout_above="@+id/txtView_email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtField_email"
        android:hint="Email"
        android:layout_marginBottom="61dp"
        android:layout_above="@+id/bt_register"
        android:layout_alignStart="@+id/txtField_studentNumber"/>


</RelativeLayout>
