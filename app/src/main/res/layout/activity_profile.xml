<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adrie.organizer.ProfileActivity">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:id="@+id/txtView_profileNameLable"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtView_profileStudentNumber"
        android:textAlignment="center"/>

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView_profileStudentNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/txtView_profileEmailLable"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView_profileEmailLable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/txtView_profileEmail"
        android:textAlignment="center"/>

    <TextView
        android:text="Student Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtView_profileStudentNumberLable"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/txtView_profileStudentNumber"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView2"/>

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView_profileEmail"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="21dp"
        android:id="@+id/bt_profileEdit"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/txtView_profileName"
        android:textAlignment="center"
        android:layout_below="@+id/txtView_profileNameLable"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtField_profileEditName"
        android:layout_alignTop="@+id/txtView_profileName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txtView_profileStudentNumberLable"
        android:id="@+id/txtField_profileEditStudntNum"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/txtView_profileEmail"
        android:layout_alignParentStart="true"
        android:id="@+id/txtField_profileEditEmail"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt_profileEdit"
        android:layout_alignParentStart="true"
        android:id="@+id/bt_saveChangesEditProfile"/>
</RelativeLayout>
